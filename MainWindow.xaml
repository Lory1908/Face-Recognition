<Window x:Class="Face_Recognition.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kinect Face Recognition" Height="600" Width="800">
    <Grid>
        <!-- Visualizes video -->
        <Image Name="VideoDisplay" HorizontalAlignment="Center" VerticalAlignment="Center" Width="640" Height="480" />

        <!-- Button -->
        <Button Name="ToggleButton" Content="Next" HorizontalAlignment="Center" VerticalAlignment="Top" Width="150" Height="30" Click="ToggleButton_Click"/>

        <!-- Text to display which stream is active -->
        <TextBlock Name="StreamTypeText" HorizontalAlignment="Center" VerticalAlignment="Bottom" FontSize="16" FontWeight="Bold" Foreground="Black"/>
    </Grid>
</Window>
